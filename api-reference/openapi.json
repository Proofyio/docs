        "description": "Verify a single email address",
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SingleCheckResponse"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/HttpErrorResponse"
          },
          "401": {
            "$ref": "#/components/responses/HttpErrorResponse"
          },
          "404": {
